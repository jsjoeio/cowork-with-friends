---
// Component Imports
import { TopSection } from "../components/TopSection.tsx"
import { MainContainer } from "../components/MainContainer.tsx"
import { Footer } from "../components/Footer.tsx"
import Layout from "../layouts/main.astro"

// Scottsdale group calendar ID - this is displayed on the main page
// Replace with your actual Google Calendar ID (e.g., "abc123@group.calendar.google.com")
const scottsdaleCalendarId = "cwf-scottsdale@example.com"
const apiKey = import.meta.env.PUBLIC_GOOGLE_CALENDAR_API_KEY

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<Layout title="">
  <body>
    <MainContainer>
      <TopSection calendarId={scottsdaleCalendarId} apiKey={apiKey} client:load />
      <Footer />
    </MainContainer>
  </body>
</Layout>
